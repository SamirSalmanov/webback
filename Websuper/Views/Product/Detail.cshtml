@model HomeViewModel

<div class="product">
    <div class="product-blog">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="left">
                        <img class="img-fluid" style="margin-right:20px;" src="@Model.Gallery.PhotoURL" alt="">
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="right">
                        <h1>@Model.Gallery.Title</h1>
                        <p>
                            @Model.Gallery.Description
                        </p>
                        <div class="com d-flex">
                            <i class="bi bi-hdd-stack"></i>
                            <h6>@Model.Gallery.Category</h6>
                        </div>
                    </div>
                </div>
            </div>
           

        </div>
    </div>
</div>